<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colors_gradient">

    <TextView
        android:id="@+id/pokemonName"
        android:text="pokemon"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pokemonNumber"
        android:text="Pokemon NÂ° "
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokemonName"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/pokemonNumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/typeText"
        android:text="Type :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/pokemonImage"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/type"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonType"
        android:layout_alignBaseline="@+id/typeText"
        android:layout_alignBottom="@+id/typeText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/hpText"
        android:text="HP :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hp"
        android:layout_alignBottom="@+id/hp"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/hp"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonHP"
        android:layout_below="@+id/type"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/attackText"
        android:text="Attack :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hpText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/attack"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonAttack"
        android:layout_alignBaseline="@+id/attackText"
        android:layout_alignBottom="@+id/attackText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/defenseText"
        android:text="Defense :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/attackText"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/defense"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonDefense"
        android:layout_alignBaseline="@+id/defenseText"
        android:layout_alignBottom="@+id/defenseText"
        android:layout_alignStart="@+id/attack" />

    <TextView
        android:id="@+id/speedText"
        android:text="Speed :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/defenseText"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/speed"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonSpeed"
        android:layout_alignBaseline="@+id/speedText"
        android:layout_alignBottom="@+id/speedText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/specialattackText"
        android:text="Special Attack :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/speedText"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/specialattack"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonSpecialAttack"
        android:layout_alignBaseline="@+id/specialattackText"
        android:layout_alignBottom="@+id/specialattackText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/specialdefenseText"
        android:text="Special Defense :"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/specialattackText"
        android:layout_alignParentStart="true"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/specialdefense"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="PokemonSpecialDefens"
        android:layout_alignBaseline="@+id/specialdefenseText"
        android:layout_alignBottom="@+id/specialdefenseText"
        android:layout_alignParentEnd="true" />

</RelativeLayout>